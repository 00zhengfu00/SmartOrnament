<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">
        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>
    <!--<Button
        android:id="@+id/btn_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="100dp"
        android:paddingRight="160dp"
        android:textColor="@color/color_selector"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:text="用户"

        android:drawableLeft="@drawable/ll_selector"
        android:onClick="onClick"
        />-->

    <Button
        android:id="@+id/btn_linkble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/color_selector"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:text="设备连接"

        android:drawableLeft="@mipmap/linkdevice"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/btn_protect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:textColor="@color/color_selector"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:text="侦测模式"

        android:drawableLeft="@mipmap/protect"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/btn_sos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:textColor="@color/color_selector"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:text="求助模式"

        android:drawableLeft="@mipmap/sos"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:textColor="@color/color_selector"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:text="系统设置"

        android:drawableLeft="@mipmap/systemsetting"
        android:onClick="onClick"
        />

</LinearLayout>